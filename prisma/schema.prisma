datasource db {
  provider = "postgresql"
  url      = env("SUPABASE_STRING")
  schemas  = ["streamby"]
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

model Project {
  id           String       @id @default(uuid())
  dbType       String
  name         String
  description  String?
  image        String?
  allowUpload  Boolean      @default(true)
  allowSharing Boolean      @default(false)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  folders      FolderNode[]
  members      Member[]
  exports      Export[]
  exportCollections ExportCollection[]

  @@schema("streamby")
}

model FolderNode {
  id         String      @id @default(uuid())
  name       String
  projectId  String
  parentId   String?
  project    Project     @relation(fields: [projectId], references: [id])
  parent     FolderNode? @relation("FolderChildren", fields: [parentId], references: [id])
  children   FolderNode[] @relation("FolderChildren")

  @@schema("streamby")
}

model Member {
  id         String   @id @default(uuid())
  userId     String
  role       String
  archived   Boolean  @default(false)
  projectId  String
  project    Project  @relation(fields: [projectId], references: [id])

  @@schema("streamby")
}

model Export {
  id           String   @id @default(uuid())
  name         String
  description  String?
  collectionName String
  projectId    String
  project      Project  @relation(fields: [projectId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@schema("streamby")
}

model ExportCollection {
  id         String       @id @default(uuid())
  projectId  String
  name       String
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  project    Project      @relation(fields: [projectId], references: [id])
  entries    ExportEntry[]

  @@unique([projectId, name])
  @@schema("streamby")
}

model ExportEntry {
  id                 String         @id @default(uuid())
  key                String
  value              String
  exportCollectionId String
  exportCollection   ExportCollection @relation(fields: [exportCollectionId], references: [id])

  @@schema("streamby")
}
